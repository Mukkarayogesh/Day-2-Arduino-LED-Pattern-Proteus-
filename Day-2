int ledPins[] = {2, 3, 4, 5, 6, 7, 8, 9};
int totalleds = 8;

void setup() {
  for (int i = 0; i < totalleds; i++) {
    pinMode(ledPins[i], OUTPUT);
  }
}

void loop(){
  for (int i = 0; i < 4; i++) {
    digitalWrite(ledPins[3-i], LOW);
    digitalWrite(ledPins[4+i], LOW);  
    delay(500);                       
  }
   for (int i = 0; i < 4; i++) {
    digitalWrite(ledPins[i], HIGH);
    digitalWrite(ledPins[7-i], HIGH);  
    delay(500); 
  
  
  }
}
